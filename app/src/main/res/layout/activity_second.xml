<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="14dp"
    tools:context=".second_activity">

    <EditText
        android:id="@+id/mathGrade"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="הכנס ציון"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/mathLevel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mathLevel" />

    <EditText
        android:id="@+id/mathLevel"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="הכנס יח&quot;ל"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/englishLevel"
        app:layout_constraintEnd_toStartOf="@+id/tv11"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/mathGrade"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv11"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="    מתמטיקה"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/mathLevel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/mathLevel"
        app:layout_constraintTop_toTopOf="@+id/mathLevel" />

    <EditText
        android:id="@+id/englishGrade"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="הכנס ציון"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/englishLevel"
        app:layout_constraintEnd_toStartOf="@+id/englishLevel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/englishLevel" />

    <EditText
        android:id="@+id/englishLevel"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="הכנס יח&quot;ל"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toStartOf="@+id/tv12"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/englishGrade"
        app:layout_constraintTop_toBottomOf="@+id/mathLevel" />

    <TextView
        android:id="@+id/tv12"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="    אנגלית  "
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/englishLevel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/englishLevel"
        app:layout_constraintTop_toTopOf="@+id/englishLevel" />

    <EditText
        android:id="@+id/agbaraGrade1"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="       הכנס ציון   "
        android:inputType="number"
        android:textSize="14dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/level1"
        app:layout_constraintEnd_toStartOf="@+id/level1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/level1"
        tools:ignore="ExtraText" />

    <TextView
        android:id="@+id/level1"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="18dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/level2"
        app:layout_constraintEnd_toStartOf="@+id/agbara1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/agbaraGrade1"
        app:layout_constraintTop_toBottomOf="@+id/guideline2" />

    <EditText
        android:id="@+id/agbara1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:hint="   הכנס הגברה         "
        android:textSize="14dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/level1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/level1"
        app:layout_constraintTop_toTopOf="@+id/level1" />

    <EditText
        android:id="@+id/agbaraGrade2"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="   הכנס ציון       "
        android:inputType="number"
        android:textSize="14dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/level2"
        app:layout_constraintEnd_toStartOf="@+id/level2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/level2" />

    <TextView
        android:id="@+id/level2"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="18dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/level3"
        app:layout_constraintEnd_toStartOf="@+id/agbara2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/agbaraGrade2"
        app:layout_constraintTop_toBottomOf="@+id/level1" />

    <EditText
        android:id="@+id/agbara2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:hint="   הכנס הגברה         "
        android:textSize="14dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/level2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/level2"
        app:layout_constraintTop_toTopOf="@+id/level2" />

    <EditText
        android:id="@+id/agbaraGrade3"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="   הכנס ציון       "
        android:inputType="number"
        android:textSize="14dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/level3"
        app:layout_constraintEnd_toStartOf="@+id/level3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/level3" />

    <TextView
        android:id="@+id/level3"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="18dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toStartOf="@+id/agbara3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/agbaraGrade3"
        app:layout_constraintTop_toBottomOf="@+id/level2" />

    <EditText
        android:id="@+id/agbara3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:hint="   הכנס הגברה         "
        android:textSize="14dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/level3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/level3"
        app:layout_constraintTop_toTopOf="@+id/level3" />

    <Button
        android:id="@+id/prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="prev"
        android:text="Prev"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="205dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_begin="133dp"
        app:layout_constraintTop_toBottomOf="@+id/englishLevel" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/level1"
        app:layout_constraintGuide_begin="306dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_begin="624dp"
        app:layout_constraintTop_toBottomOf="@+id/level3" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="683dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="148dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline">

        <RadioButton
            android:id="@+id/option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickedOption1"
            android:text="הגברה  אחת " />

        <RadioButton
            android:id="@+id/option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickedOption2"
            android:text="שתי הגברות" />

        <RadioButton
            android:id="@+id/option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickedOption3"
            android:text="שלוש הגברות" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>